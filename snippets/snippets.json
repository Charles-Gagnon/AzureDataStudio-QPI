    "QPI query plan statistics (all)": {
        "prefix": "qpi:Query plan statistics(all)",
        "body": [
            "SELECT * FROM qpi.db_query_plan_exec_stats_history",
            "-- WHERE [text] = '';",
            "-- WHERE query_id = ;",
            "-- WHERE plan_id = ;"
        ],
        "description": "Return query plan wait statistics from the entire Query Store history."
    },
    "QPI query plan stats as of time": {
        "prefix": "qpi:Query plan stats as of",
        "body": [
            "SELECT * FROM db_query_exec_stats_as_of(",
                    "qpi.ago(0/*d*/,2/*h*/,0/*m*/),",
                ")",
            "-- WHERE query_id = ;",
            "-- WHERE plan_id = ;"
        ],
        "description": "Return query plan wait statistics from the entire Query Store history."
    },
    "QPI query plan compare": {
        "prefix": "qpi:Query plan compare stats",
        "body": [
            "SELECT * FROM db_query_plan_exec_stats_diff(",
                    "qpi.ago(0/*d*/,2/*h*/,0/*m*/),",
                    "GETDATE()",
                ")",
            "-- WHERE query_id = ;",
            "-- WHERE plan_id = ;"
        ],
        "description": "Return query plan wait statistics from the entire Query Store history."
