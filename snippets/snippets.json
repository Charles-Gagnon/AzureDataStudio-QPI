        "body": [
            "SELECT * FROM qpi.db_query_plan_exec_stats",
            "-- WHERE [text] = '';",
            "-- WHERE query_id = '';",
            "-- WHERE plan_id = '';"
        ],
        "description": "Return query plan statistics from the latest Query Store interval."
